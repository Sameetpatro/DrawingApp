<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:layout_margin="10dp"
    android:background="@color/white">

    <GridLayout
        android:id="@+id/colorGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="5"
        android:rowCount="3"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 15 ImageButtons -->

        <ImageButton
            android:id="@+id/red_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/red"
            android:contentDescription="Red" />


        <ImageButton
            android:id="@+id/green_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/green"
            android:contentDescription="Green" />

        <ImageButton
            android:id="@+id/blue_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/blue"
            android:contentDescription="Blue" />

        <ImageButton
            android:id="@+id/yellow_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/yellow"
            android:contentDescription="Yellow" />

        <ImageButton
            android:id="@+id/purple_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/purple"
            android:contentDescription="Purple" />

        <ImageButton
            android:id="@+id/orange_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/orange"
            android:contentDescription="Orange" />


        <ImageButton
            android:id="@+id/cyan_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/cyan"
            android:contentDescription="Cyan" />

        <ImageButton
            android:id="@+id/magenta_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/magenta"
            android:contentDescription="Magenta" />

        <ImageButton
            android:id="@+id/brown_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/brown"
            android:contentDescription="Brown" />

        <ImageButton
            android:id="@+id/gray_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/gray"
            android:contentDescription="Gray" />

        <ImageButton
            android:id="@+id/black_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/black"
            android:contentDescription="Black" />

        <ImageButton
            android:id="@+id/white_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:contentDescription="White" />

        <ImageButton
            android:id="@+id/teal_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/teal"
            android:contentDescription="Teal" />

        <ImageButton
            android:id="@+id/maroon_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/maroon"
            android:contentDescription="Maroon" />

        <ImageButton
            android:id="@+id/babypink_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/babypink"
            android:contentDescription="Color 15" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
